# Base backup directory
BACKUP_BASE_DIR="/backup/dbbackup"

# MySQL configuration
MYSQL_PATH="/usr/bin/mysql"
MYSQLDUMP_PATH="/usr/bin/mysqldump"
MYSQL_USER="root"
MYSQL_PASSWORD=""
USE_PASSWORD=false

# Retention policy
RETENTION_DAYS=7

# --- GPG Encryption (optional) ---
ENCRYPT_BACKUPS=false
GPG_PASSWORD=""

# --- Multi-Destination FTP Upload ---
FTP_DESTINATIONS=(
  "ftp1.example.com|ftpuser1|ftppass1|server1/backups"
  "ftp2.example.com|ftpuser2|ftppass2|server2/backups"
)

# --- Multi-Destination FTPS Upload ---
FTPS_DESTINATIONS=(
  "ftps1.example.com|ftpsuser1|ftpspass1|server1/backups"
  "ftps2.example.com|ftpsuser2|ftpspass2|server2/backups"
)

# --- Multi-Destination SFTP Upload ---
SFTP_DESTINATIONS=(
  "sftp1.example.com|sftpuser1|sftppass1|/remote/server1/backups"
  "sftp2.example.com|sftpuser2|sftppass2|/remote/server2/backups"
)

# --- Telegram Notification (optional) ---
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_IDS=("123456789" "987654321")
